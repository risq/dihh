<!doctype html>
<html>
	<% include ./partials/admin/head %>
<body>

<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/admin/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<% if (message.length > 0) { %>
		<div class="alert alert-info"><%= message %></div>
	<% } %>

	<div class="row">

		<div class="col-sm-8">

			<h3><span class="fa fa-disc"></span> My digs</h3>

			<% if (digs.length > 0) { %>

				<ul>

					<% for(var i=0; i<digs.length; i++) {%>

					   <li>
					   		<%= digs[i].title %> - <%= digs[i].artists.join(', ') %> - <a href="/digs/<%= digs[i]._id %>/delete">Delete</a> - <a href="/admin/update/<%= digs[i]._id %>">Update</a>
					   	</li>

					<% } %>

				</ul>

			<% } %>
		</div>

		<div class="col-sm-4">
			<div class="well">

				<% if (page === 'update') { %>

					<% include ./partials/dig/update %>

				<% } else { %>

					<% include ./partials/dig/create %>

				<% } %>

			</div>
		</div>

	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-12">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>
					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>username</strong>: <%= user.username %><br>
						<strong>email</strong>: <%= user.email %><br>
						<strong>password</strong>: <%= user.password %>
					</p>
			</div>
		</div>

	</div>

</div>
</body>
</html>